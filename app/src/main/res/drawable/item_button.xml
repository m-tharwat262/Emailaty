<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primary_button_ripple_background">
    <item>

        <shape
            android:shape="rectangle" >

            <solid
                android:color="@android:color/transparent" />

            <stroke
                android:color="@color/primary_color"
                android:width="3dp" />

            <corners
                android:radius="20dp" />

            <padding
                android:right="12dp"
                android:left="12dp"
                android:bottom="12dp"
                android:top="12dp"/>

        </shape>

    </item>

    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">

        <shape
            android:shape="rectangle" >

            <solid
                android:color="@color/primary_color" />

            <stroke
                android:color="@color/primary_color"
                android:width="3dp" />

            <corners
                android:radius="20dp" />

            <padding
                android:right="12dp"
                android:left="12dp"
                android:bottom="12dp"
                android:top="12dp"/>

        </shape>

    </item>

</ripple>